<%- include('partials/header', { title: 'Select Test' }) %>
<%- include('partials/navbar') %>

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold mb-3">
                <i class="bi bi-clipboard-check text-primary me-2"></i>Select Test Type
            </h1>
            <p class="text-muted">Choose the mental health assessment you'd like to take</p>
        </div>
    </div>

    <div class="row g-4">
        <% testTypes.forEach(testType => { %>
            <div class="col-md-6 col-lg-3">
                <div class="card test-type-card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <div class="test-icon mb-3">
                            <span style="font-size: 4rem;"><%= testType.icon %></span>
                        </div>
                        <h4 class="fw-bold mb-3"><%= testType.name %></h4>
                        <a href="/test/mcq/<%= testType.id %>" class="btn btn-primary w-100">
                            <i class="bi bi-play-circle me-2"></i>Start Test
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info border-0 shadow-sm">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Note:</strong> Each test consists of 15 multiple-choice questions followed by 8 video-recorded subjective questions. 
                Make sure you have camera and microphone access enabled.
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

